<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@drawable/close_search_icon</item>
    </style>

    <style name="AppTheme.MAIN" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorNeteaseRed</item>
    </style>

    <style name="AppTheme.SEARCH" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorNeteaseRed</item>
    </style>
    
    <style name="PlayerToolBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlayerToolBar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/infoFont</item>
    </style>

</resources>
